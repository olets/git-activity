#!/usr/bin/env sh

# git-activity
# v1.0.0-beta.1
# https://github.com/olets/git-activity
# Copyright (Â©) 2017-present Henry Bley-Vroman


'builtin' 'export' GIT_ACTIVITY_LOG_PATH="${GIT_ACTIVITY_LOG_PATH:-${XDG_CONFIG_HOME:-$HOME/.config}/git-activity/git-activity.csv}"

__git_activity_heading="DATE\\tREPO\\tBRANCH\\tCOMMIT MESSAGE\\tSHA\\tACTIVITY"

__git_activity_log () {
  local activity branch date existing_content_without_headers message repo sha

  activity="$*"

  if ! [ -n $activity ]; then
    return
  fi
  
  branch=$(git rev-parse --abbrev-ref HEAD)
  date=$(date +"%Y-%m-%d %H:%M:%S %z") # YYYY-MM-DD HH:MM:SS [UTC offset]
  message=$(git log -1 --pretty=%s)
  repo=$(basename "$(git rev-parse --show-toplevel)") # note this uses the *local* name. to use the remote name, use $(basename -s .git "$(git config --get remote.origin.url)")
  sha=$(git rev-parse --short HEAD)

  existing_content_without_headers=$(tail -n +2 "$GIT_ACTIVITY_LOG_PATH" | tail -r | tail -n +2 | tail -r)

  printf "$__git_activity_heading\\n" > "$GIT_ACTIVITY_LOG_PATH"
  printf "$date\\t$repo \\t$branch\\t$message\\t$sha\\t$activity\\n" >> "$GIT_ACTIVITY_LOG_PATH"
  printf "$existing_content_without_headers\\n" >> "$GIT_ACTIVITY_LOG_PATH"
  printf "$__git_activity_heading\\n" >> "$GIT_ACTIVITY_LOG_PATH"
  printf "Git activity log: %s logged\\n" "$activity"
}

__git_activity_see () {
  local date_format

  date_format="+%Y-%m-%d"

  if [ "$1" = "all" ]; then
    log_date=2
  elif [ -n "$*" ]; then
    log_date=$(gdate "$date_format" -d "$*")
  else
    log_date=$(gdate "$date_format")
  fi

  activity=$(grep ^"$log_date" "$GIT_ACTIVITY_LOG_PATH")

  if [ -n "$activity" ]; then
    grep -E "^($log_date|DATE)" "$GIT_ACTIVITY_LOG_PATH" | tail -r | column -ts '	' | less -NQS
  else
    printf "No git activity logged %s\\n" "$*"
  fi
}

main() {
  local action

  action="$1"

  shift

  if ! [ -f "$GIT_ACTIVITY_LOG_PATH" ]; then
    touch "$GIT_ACTIVITY_LOG_PATH"
    echo "$__git_activity_heading" > "$GIT_ACTIVITY_LOG_PATH"
  fi

  __git_activity_$action "$@" 2>/dev/null
}

main "$@"
